<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8E1EE"
    tools:context=".OperacionExitosaActivity">


    <ImageView
        android:id="@+id/imageViewExit"
        android:layout_width="219dp"
        android:layout_height="191dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="93dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewOpeExit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/exitosa" />

    <TextView
        android:id="@+id/textViewOpeExit"
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:layout_marginTop="32dp"
        android:text="@string/operaExit"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/imageViewExit"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/button6Inicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/boton_registro"
        android:backgroundTint="#00D5DD"
        android:text="@string/volverInicio"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewOpeExit" />


</androidx.constraintlayout.widget.ConstraintLayout>

